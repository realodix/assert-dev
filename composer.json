{
    "name": "realodix/assert",
    "description": "Provides runtime assertions",
    "keywords": ["assert", "check", "validate"],
    "license": "MIT",
    "authors": [{"name": "Budi Hermawan", "role": "Developer"}],
    "homepage": "https://github.com/realodix/assert",
    "require": {
        "php": ">=7.4",
        "symfony/polyfill-php80": "^1.26",
        "symfony/polyfill-php81": "^1.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "realodix/relax": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Realodix\\Assert\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\Assert\\Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
